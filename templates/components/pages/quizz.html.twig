{% extends 'base.html.twig' %}
{% block body %}
    <div class="wrapper questions">
        <h2 class="section_title">Random questions</h2>
        <section class="questions__random__form">
            <form action="" id="questions__random">
                {% for question in questions %}
                    <div class="questions__random__form__tab d-none">
                        <h2 class="questions__random__form__tab__title">{{ question.title }}</h2>
                        <legend>{{ question.text }}</legend>
                        {% for answer in question.answers %}
                            <input type="checkbox" id="questions__random__form__tab__{{ answer.id }}" name="questions__random__form__tab__{{ answer.id }}" />
                            <label for="questions__random__form__tab__{{ answer.id }}">{{ answer.text }}</label>
                        {% endfor %}
                    </div>
                {% endfor %}

                <div>
                    <div>
                        <button type="button" id="prevBtn" class="btn btn-secondary ">Previous</button>
                        <button type="button" id="nextBtn" class="btn btn-primary">Next</button>
                    </div>
                </div>

            </form>
        </section>
    </div>
{% endblock %}